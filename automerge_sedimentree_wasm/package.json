{
  "name": "@automerge/automerge-sedimentree",
  "version": "0.4.1-alpha.0",
  "description": "Wasm bindings for storing Automerge documents in Sedimentree",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/cjs/node.cjs",
  "scripts": {
    "build": "pnpm run build-node && pnpm run build-bundler && pnpm run build-slim",
    "build-node": "wasm-pack build --out-dir pkg-node --target nodejs --release",
    "build-bundler": "wasm-pack build --out-dir pkg --target bundler --release",
    "build-slim": "node build_slim.js"
  },
  "keywords": [
    "automerge",
    "crdt",
    "sedimentree",
    "sync",
    "wasm"
  ],
  "author": "Alex Good <alex@patternist.xyz>, Brooklyn Zelenka <hello@brooklynzelenka.com>",
  "license": "MIT OR Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/inkandswitch/subduction",
    "directory": "automerge_sedimentree_wasm"
  },
  "homepage": "https://github.com/inkandswitch/subduction",
  "bugs": {
    "url": "https://github.com/inkandswitch/subduction/issues"
  },
  "type": "module",
  "module": "./dist/esm/bundler.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": [
    "./dist/esm/node.js",
    "./dist/esm/web.js",
    "./dist/esm/workerd.js"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "workerd": {
        "import": "./dist/esm/workerd.js",
        "require": "./dist/cjs/web.cjs"
      },
      "node": {
        "import": "./dist/esm/node.js",
        "require": "./dist/cjs/node.cjs"
      },
      "browser": {
        "import": "./dist/esm/bundler.js",
        "require": "./dist/cjs/web.cjs"
      },
      "import": "./dist/esm/web.js",
      "require": "./dist/cjs/web.cjs"
    },
    "./slim": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/slim.js",
      "require": "./dist/cjs/slim.cjs"
    },
    "./wasm": "./dist/@automerge/automerge-sedimentree.wasm",
    "./wasm-base64": {
      "import": "./dist/esm/wasm-base64.js",
      "require": "./dist/cjs/wasm-base64.cjs"
    },
    "./iife": "./dist/iife/index.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^22.17.2",
    "html-webpack-plugin": "^5.6.4",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "vite": "^5.4.19",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0",
    "webpack": "^5.101.3",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.2"
  },
  "pnpm": {
    "overrides": {
      "esbuild@<=0.24.2": ">=0.25.0"
    }
  }
}