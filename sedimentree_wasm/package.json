{
  "name": "@subduction/sedimentree",
  "version": "0.0.0-alpha.0",
  "description": "Wasm/JavaScript bindings for Sedimentree",
  "private": true,
  "main": "./dist/cjs/node.cjs",
  "scripts": {
    "build": "pnpm run build-node && pnpm run build-bundler && pnpm run build-slim",
    "build-node": "wasm-pack build --out-dir pkg-node --target nodejs --release",
    "build-bundler": "wasm-pack build --out-dir pkg --target bundler --release",
    "build-slim": "node build_slim.js"
  },
  "keywords": [
    "sedimentree",
    "wasm",
    "crdt"
  ],
  "author": "",
  "license": "Apache-2.0",
  "type": "module",
  "module": "./dist/esm/bundler.js",
  "types": "./dist/index.d.ts",
  "files": [
    "pkg/*",
    "pkg-node/*",
    "pkg-slim/*",
    "package.json",
    "README.md",
    "dist"
  ],
  "sideEffects": [
    "./pkg/sedimentree_wasm.js",
    "./pkg/sedimentree_wasm_bg.js"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "workerd": {
        "import": "./dist/esm/workerd.js",
        "require": "./dist/cjs/web.cjs"
      },
      "node": {
        "import": "./dist/esm/node.js",
        "require": "./dist/cjs/node.cjs"
      },
      "browser": {
        "import": "./dist/esm/bundler.js",
        "require": "./dist/cjs/web.cjs"
      },
      "import": "./dist/esm/web.js",
      "require": "./dist/cjs/web.cjs"
    },
    "./slim": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/slim.js",
      "require": "./dist/cjs/slim.cjs"
    },
    "./wasm": "./dist/@subduction/sedimentree.wasm",
    "./wasm-base64": {
      "import": "./dist/esm/wasm-base64.js",
      "require": "./dist/cjs/wasm-base64.cjs"
    },
    "./iife": "./dist/iife/index.js"
  },
  "devDependencies": {
    "@types/node": "^22.17.2",
    "typescript": "^5.9.2"
  },
  "pnpm": {
    "overrides": {
      "esbuild@<=0.24.2": ">=0.25.0"
    }
  }
}